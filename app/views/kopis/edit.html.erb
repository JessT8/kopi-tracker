<h1><%= @kopi.name%></h1>

<%= form_with scope: :kopi, model: @kopi, local: true do |form| %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name%><br>
  </p>

  <p>
    <%= form.label :roast_id %><br>
    <%= form.text_field :roast_id %><br>
  </p>

  <p>
    <%= form.label :origin_id %><br>
    <%= form.text_field :origin_id %><br>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', kopis_path %>